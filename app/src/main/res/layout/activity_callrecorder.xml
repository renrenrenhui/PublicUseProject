<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnGetOkPermissions"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="_btnGetOkPermissions"/>

    <Button
        android:id="@+id/btnInitCapture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="_btnInitCapture"/>

    <Button
        android:id="@+id/btnStartCapture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="_btnStartCapture"/>

    <Button
        android:id="@+id/btnStopAudioCapture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="_btnStopCapture"/>

</LinearLayout>